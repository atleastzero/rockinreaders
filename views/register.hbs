<div class="page-header">
    <div class="page-background register"></div>
    <h2 class="page-title">Register</h2>
</div>

<div class="page-content">
    <div class="spacer"></div>
    <form action="/register" method="post">
        <div class="title">
            <h3>Register</h3>
        </div>
        <div class="field">
            <label>Email:</label>
            <br>
            <input class="full-width" type="email" name="email" required>
            <br>
        </div>
        <div class="field">
            <label>Password:</label>
            <br>
            <input class="full-width" type="password" name="password" required>
            <br><br>
        </div>
        <div class="d-flex align-items-center">
            <h4>Adult Registering Info</h4><small class="ml-1">(we'll ask about your readers once you've registered)</small>
        </div>
        <div class="field">
            <label>First Name:</label>
            <br>
            <input class="full-width" type="text" name="firstName" required>
            <br><br>
        </div>        
        <div class="field">
            <label>Last Name:</label>
            <br>
            <input class="full-width" type="text" name="lastName" required>
            <br><br>
        </div>
        {{#if message}}
            <label id="error-message" class="alert alert-danger " role="alert">
                {{message}}
            </label>
        {{/if}}
        <div class="field">
            <input class="btn btn-dark" type="submit" value="Register">
        </div>
        <label id="error-message"></label>
    </form>

    <hr>
    <p>Already have an account? <a href="/login">Login</a></p>
</div>