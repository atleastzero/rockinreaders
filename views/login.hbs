<div class="page-header">
    <div class="page-background login"></div>
    <h2 class="page-title">Login / Renew</h2>
</div>

<div class="page-content">
    <div class="spacer"></div>
    <form action="/login" method="post">
        <div class="title">
            <h3>Login</h3>
        </div>
        <div class="field">
            <label>Email:</label>
            <br>
            <input class="full-width" type="text" name="username" required>
            <br>
        </div>
        <div class="field">
            <label>Password:</label>
            <br>
            <input class="full-width" type="password" name="password" required>
            <br><br>
        </div>
        {{#if info}}
            <label id="error-message" class="alert alert-danger " role="alert">
                {{info}}
            </label>
        {{/if}}
        <div class="field">
            <input class="btn btn-dark" type="submit" value="Login">
        </div>
    </form>
</div>