<div class="page-header">
    <div class="page-background login"></div>
    <h2 class="page-title">Login / Renew</h2>
</div>

<div class="page-content">
    <div class="spacer"></div>
    <form action="/login" method="post">
        <div class="title">
            <h3>Login</h3>
        </div>
        <div class="field">
            <label>Email:</label>
            <br>
            <input class="full-width" type="text" name="email" required>
            <br>
        </div>
        <div class="field">
            <label>Password:</label>
            <br>
            <input class="full-width" type="password" name="password" required>
            <br><br>
        </div>
        {{#if message}}
            <label id="error-message" class="alert alert-danger " role="alert">
                {{message}}
            </label>
        {{/if}}
        <div class="field">
            <input class="btn btn-dark" type="submit" value="Login">
        </div>
    </form>

    <hr>
    <p>Need an account? <a href="/register">Sign Up</a></p>
</div>