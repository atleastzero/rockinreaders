<div class="page-header">
    <div class="page-background login"></div>
    <h2 class="page-title">Login / Renew</h2>
</div>

<div class="page-content">
    <div class="spacer"></div>
    <form action="/login" method="post">
        <div class="title">
            <h3>Login</h3>
        </div>
        <div class="field">
            <label>Email:</label>
            <br>
            <input class="full-width" type="text" name="username" required>
            <br>
        </div>
        <div class="field">
            <label>Password:</label>
            <br>
            <input class="full-width" type="password" name="password" required>
            <br><br>
        </div>
            <div class="field">
            <input class="btn btn-dark" type="submit" value="Login">
        </div>
        <label id="error-message"></label>
  </form>

  <script>
        const urlParams = new URLSearchParams(window.location.search)
        const info = urlParams.get('info')

        if(info) {
            const errorMessage = document.getElementById("error-message")
            errorMessage.innerText = info
            errorMessage.style.display = "block"
        }
  </script>
</div>